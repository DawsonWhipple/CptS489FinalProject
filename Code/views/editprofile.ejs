 </script>
    <title>EditProfile</title>
    <!--Following link is used for BootStrap implementation-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <!--Following link is used for CSS in index.css-->
    <link rel="stylesheet" type="text/css"href="Styles/index.css">
</head>
<body>
    <form action="/editProfile" method="post">
        <label for="newname">Change Name To: </label>
        <input type="text" id="newname" name="newname" value=<%=user.name%>>
        <label for="displayemail">Email to Display: </label>
        <input type="text" id="displayemail" name="displayemail" value=<%=user.displayemail%>>
        <label for="location">Location: </label>
        <input type="text" id="location" name="location" value=<%=user.location%>>
        <label for="fitnessgoal">Fitness Goal: </label>
        <input type="text" id="fitnessgoal" name="fitnessgoal" value=<%=user.fitnessgoal%>>
        <label for="favoriteexercise">Favorite Excercise: </label>
        <input type="text" id="favoriteexercise" name="favoriteexercise" value=<%=user.favoriteexercise%>>
        <label for="bio">Bio: </label>
        <input type="text" id="bio" name="bio" value=<%=user.bio%>>
        <p>Social Media Accounts </p>
        <label for="facebook">Facebook Username: </label>
        <input type="text" id="facebook" name="facebook" value=<%=user.facebook%>>
        <label for="instagram">Instagram Username: </label>
        <input type="text" id="instagram" name="instagram" value=<%=user.instagram%>>
        <label for="twitter">Twitter Username: </label>
        <input type="text" id="twitter" name="twitter" value=<%=user.twitter%>>
        <label for="snapchat">Snapchat Username: </label>
        <input type="text" id="snapchat" name="snapchat" value=<%=user.snapchat%>>
        <label for="spotify">Spotify Username: </label>
        <input type="text" id="spotify" name="spotify" value=<%=user.spotify%>>
        <input type="submit" value="submit">
    </form>
    <div id="IncludeFooter"></div>
    <!--<div>Hello World!</div>-->
